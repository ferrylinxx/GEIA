services:
  geia:
    image: ${DOCKER_IMAGE:-geia:latest}
    build:
      context: .
      dockerfile: Dockerfile
    ports:
      - "${HOST_PORT:-3000}:3000"
    env_file:
      - ./.env.local
    environment:
      NODE_ENV: production
      PORT: 3000
      HOSTNAME: 0.0.0.0
    # Mount network drives as volumes
    # ⚠️ IMPORTANT: Copy this file to 'docker-compose.yml' and update paths to your network drives
    volumes:
      # GarCloud network drive (read-only)
      - type: bind
        source: //YOUR_SERVER/YOUR_SHARE_1
        target: /mnt/garcloud
        read_only: true
      # Projectes network drive (read-only)
      - type: bind
        source: //YOUR_SERVER/YOUR_SHARE_2
        target: /mnt/projectes
        read_only: true
    restart: unless-stopped

